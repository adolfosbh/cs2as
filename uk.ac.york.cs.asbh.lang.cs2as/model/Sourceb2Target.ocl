import 'SourceMM1b.ecore'
import 'TargetMM1.ecore'
import 'Environment.ecore'
import 'TargetLookup.ocl'

package source

context SRoot
def : ast() : target::TRoot=
	target::TRoot {
		ownedA = ownedX.ast()
	}

context X
def : ast() : target::A =
	invalid -- To be overriden by X1/X2
	
context AmbX 
--def : ast() : target::A =
--	cst().ast()
	
def : cst() : X =
	if isA1
	then X1 {
		ownsY = ownsY
	}
	else X2 {
		ownsY = ownsY
	}
	endif

context X1
def : ast() : target::A1 =
	target::A1 {
		ownsB = ownsY.oclAsType(Y1).ast()
	}
	
context X2
def : ast() : target::A2 =
	target::A2 {
		ownsC = ownsY.oclAsType(Y2).ast()
	}

context Y1	
def : ast() : target::B =
	target::B {
		ownsD = ownsZ.ast(),
		name = name
	}
	
context Y2	
def : ast() : target::C =
	target::C {
		ownsD = ownsZ.ast(),
		name = name
	}

context Z
def : ast() : target::D =
	invalid -- To be overriden by Z1/Z2


context AmbZ
--def : ast() : target::D =
--	cst().ast()
	
def : cst() : Z =
	if toY.oclIsKindOf(source::Y1)
	then Z1 {
		name = name,
		toY = toY
	}
	else Z2 {
		name = name,
		toY = toY
	}
	endif
	
context Z1 
def : ast() : target::D =
	target::D {
		toA = toY.oclAsType(source::Y1).ast().toA1,
		name = name,
		refsB = ast().lookupB(name) -- Lookups are performed from the created ast element
									-- Problem : disambiguating lookups need to start from the container 
	}
	
context Z2
def : ast() : target::D =
	target::D {
		toA = toY.oclAsType(source::Y2).ast().toA2,
		name = name,
		refsC = ast().lookupC(name) -- Lookups are performed from the created ast element
									-- Problem : disambiguating lookups need to start from the container 
	}

endpackage
